extends layout 

block content 
  h1 Address Book 
  form(action="/addressBook", method="post")
    input(type="text", name="searchkey", placeholder="Search by name")
    button(type="submit") Search
  
  form(action="/add", method="post") 
    input(type="text", name="name", placeholder="Name" , required) 
    input(type="email", name="email", placeholder="Email", required) 
    input(type="text", name="phone", placeholder="Phone", required) 
    button(type="submit") Add Contact 
  
  each contact in contacts 
    div(class="box") 
      h4= contact.name 
      a(href='mailto:' + contact.email) #{contact.email} 
      p= contact.phone
      a(class='editBtn', href='edit/' + contact.id) Edit
      a(class='deleteBtn', onclick='return confirm ("Are you sure?")', href='delete/' + contact.id) Delete
